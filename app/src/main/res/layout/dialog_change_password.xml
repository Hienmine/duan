<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="16dp">

    <EditText
        android:id="@+id/edCurrentPass"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="Mật khẩu hiện tại" android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edNewPass"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="Mật khẩu mới" android:inputType="textPassword"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/edConfirmPass"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu" android:inputType="textPassword"
        android:layout_marginTop="8dp"/>
</LinearLayout>
