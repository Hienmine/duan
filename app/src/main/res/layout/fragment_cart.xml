<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="12dp">

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Giỏ hàng trống" android:visibility="gone"
        android:textStyle="bold" android:textSize="16sp" android:padding="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCart"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Tổng: 0 đ" android:textStyle="bold" android:paddingTop="8dp" />

    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Thanh toán" android:layout_marginTop="8dp" />
</LinearLayout>
