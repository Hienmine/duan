<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Quên mật khẩu" android:textStyle="bold" android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Nhập tên đăng nhập" android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edUsernameFP"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="Username" android:inputType="textPersonName"/>

    <Button
        android:id="@+id/btnShowFP"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Hiện mật khẩu" android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvResultFP"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="" android:textStyle="bold" android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnBackFP"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Quay lại" android:layout_marginTop="12dp"/>
</LinearLayout>
